<h1><%= @post.text %></h1>
<p><strong>Status:</strong> <%= @post.status.humanize %></p> <!-- Display the status -->
<p><strong>Course:</strong> <%= @post.course %></p>
<p><strong>Schedule:</strong> <%= display_schedule(@post.start_slot, @post.end_slot) %></p>
<p><strong>Tag:</strong> <%= @post.tag %></p>
<p><strong>Text:</strong> <%= @post.text %></p>

<!-- Only display the "Attend" button if the post is "pending" or "confirmed" -->
<% if @post.pending? || @post.confirmed? %>
  <%= button_to "Attend", attend_post_path(@post), method: :post %>
<% end %>