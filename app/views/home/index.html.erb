<h1>Lion Study Buddy</h1>

<% if logged_in? %>
  <%= link_to 'Logout', logout_path, method: :delete %><br><br>
<% else %>
  <%= link_to 'Login', login_path %><br><br>
<% end %>

<%= link_to 'Profile', profile_path %>
<%= link_to 'Create Post', new_post_path %><br><br>

<table border="1">
  <thead>
    <tr>
      <th>Course</th>
      <th>Schedule</th>
      <th>Tag</th>
      <th>Creator Name</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.course %></td>
        <td><%= display_schedule(post.start_slot, post.end_slot) %></td>
        <td><%= post.tag %></td>
        <td><%= post.creator_name %></td>
        <td><%= link_to 'View', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
