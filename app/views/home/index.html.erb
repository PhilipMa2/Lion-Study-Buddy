<header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
  <h1 class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">Lion Study Buddy</h1>
  <ul class="col-md-3 text-end">
    <% if logged_in? %>
      <%= link_to 'Logout', logout_path, method: :delete %><br><br>
    <% else %>
      <%= link_to 'Login', login_path %><br><br>
    <% end %>
    <%= link_to 'Create Post', new_post_path, class: "btn btn-outline-primary me-2" %>
    <%= link_to 'Profile', profile_path, class: "btn btn-primary" %>
  </ul>
</header>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Course</th>
      <th scope="col">Tag</th>
      <th scope="col">Creator</th>
      <th scope="col">Details</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr class="post">
        <td><%= post.course %></td>
        <td><%= post.tag %></td>
        <td><%= link_to post.creator.name, student_path(post.creator) %></td>
        <td><%= link_to 'View', post_path(post), class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
