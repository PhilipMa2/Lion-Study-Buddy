<h1>Lion Study Buddy</h1>
<%= link_to 'Profile', profile_path %>
<%= link_to 'Create Post', new_post_path %><br><br>

<table border="1">
  <thead>
    <tr>
      <th data-label = "Course">Course</th>
      <th data-label = "Schedule">Schedule</th>
      <th data-label = "Tag">Tag</th>
      <th data-label = "Creator Name">Creator Name</th>
      <th data-label = "Details">Details</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.course %></td>
        <td><%= post.schedule %></td>
        <td><%= post.tag %></td>
        <td><%= post.creator_name %></td>
        <td><%= link_to 'View', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
