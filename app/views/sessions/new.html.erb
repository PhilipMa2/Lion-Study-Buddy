<h1>Login</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :passcode %>
    <%= f.password_field :passcode %>
  </div>
  
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>
